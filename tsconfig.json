{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es5"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@tests/*": ["./tests/*"]
    }
  },
  "include": ["ActionManager/**/*", "tests/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "tests/photoshop-scripts/**/*"
  ]
}
